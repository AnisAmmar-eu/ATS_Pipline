{
	"DbInitialize": "true",
	"ConnectionStrings": {
		"DefaultConnection": "Data Source=localhost;Initial Catalog=jo;User ID=LOIC;Password=loic;TrustServerCertificate=true"
	},
	"StationConfig": {
		"StationName": "Server"
	},
	"CameraConfig": {
		"ImagesPath": "C:\\serverAts\\images\\picref\\images\\",
		"ThumbnailsPath": "C:\\serverAts\\images\\picref\\thumbnails\\"
	},
	"ApiAddresses": {
		/* Station */
		"ApiADS": "http://localhost:7275",
		"ApiAlarm": "http://localhost:7276",
		"ApiCamera": "http://localhost:7277",
		"ApiIOT": "http://localhost:7278",
		"ApiMonitor": "http://localhost:7280",
		"ApiStationCycle": "http://localhost:7282",

		/* Server */
		"ApiKPI": "http://localhost:7279",
		"ApiServerReceive": "http://localhost:7281",
		"ApiUser": "http://localhost:7283",
		"ApiVision": "http://localhost:7284"
	},
	"ClientHost": [
		"http://localhost:4200",
		"http://localhost:4200"
	],
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer" ],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"System": "Warning",
				"Microsoft": "Warning",
				"Microsoft.AspNetCore": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
					"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} - {Source}] {Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "MSSqlServer",
				"Args": {
					"connectionString": "Data Source=(localdb)\\mssqllocaldb;Initial Catalog=jo;TrustServerCertificate=true",
					"sinkOptionsSection": {
						"autoCreateSqlDatabase": false,
						"autoCreateSqlTable": false,
						"tableName": "Logs"
					},
					"columnOptionsSection": {
						"id": {
							"columnName": "ID"
						},
						"timeStamp": {
							"columnName": "TS"
						},
						"additionalColumns": [
							{
								"ColumnName": "Source",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": false
							},
							{
								"ColumnName": "HasBeenSent",
								"DataType": "bit",
								"AllowNull": false
							}
						]
					}
				}
			}
		],
		"Enrich": [
			"FromLogContext"
		]
	}
}
