						"autoCreateSqlDatabase": false,
						"autoCreateSqlTable": false,
						"tableName": "Logs"
					},
					"columnOptionsSection": {
						"id": {
							"columnName": "ID"
						},
						"timeStamp": {
							"columnName": "TS"
						},
						"additionalColumns": [
							{
								"ColumnName": "Source",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": false
							},
							{
								"ColumnName": "HasBeenSent",
								"DataType": "bit",
								"AllowNull": false
							}
						]
					}
				}
			}
		],
		"Enrich": [
			"FromLogContext"
		]
	}
