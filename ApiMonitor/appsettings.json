{
	"Serilog": {
		"Using": [ "Serilog.Sinks.MSSqlServer" ],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"System": "Warning",
				"Microsoft": "Warning",
				"Microsoft.AspNetCore": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "MSSqlServer",
				"Args": {
					"connectionString": "Data Source=(localdb)\\mssqllocaldb;Initial Catalog=jo;TrustServerCertificate=true",
					"sinkOptionsSection": {
						"autoCreateSqlDatabase": false,
						"autoCreateSqlTable": false,
						"tableName": "Logs"
					},
					"columnOptionsSection": {
						"id": {
							"columnName": "ID"
						},
						"timeStamp": {
							"columnName": "TS"
						},
						"additionalColumns": [
							{
								"ColumnName": "Source",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": false
							},
							{
								"ColumnName": "Type",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": false
							},
							{
								"ColumnName": "HasBeenSent",
								"DataType": "bit",
								"AllowNull": false
							}
						]
					}
				}
			}
		],
		"Enrich": [
			"FromLogContext"
		]
	},
	"AllowedHosts": "*"
}
